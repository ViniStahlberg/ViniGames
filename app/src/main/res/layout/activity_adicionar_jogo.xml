<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/fundoPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_new_game"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/corDestaque"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_name"
            android:inputType="textCapWords"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDesenvolvedora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_developer"
            android:inputType="textCapWords"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genre"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_genre"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/steam_url"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etSteamUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_steam_url"
            android:inputType="textUri"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wikipedia_url"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etWikipediaUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_wikipedia_url"
            android:inputType="textUri"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/corDestaque"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:background="@drawable/image_container_background"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivImagemSelecionada"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder"
                android:contentDescription="@string/selected_image"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSelecionarImagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/select_from_gallery"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnRemoverImagem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/remove_image"
                    android:backgroundTint="@color/corDestaqueDark"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/corDestaque"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:backgroundTint="@color/corDestaqueDark"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>