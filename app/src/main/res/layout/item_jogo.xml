<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:layout_margin="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgCapa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:background="@drawable/image_background"
        android:contentDescription="Capa do jogo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Jogo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrincipal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDesenvolvedora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desenvolvedora"
            android:textSize="14sp"
            android:textColor="@color/textSecundario"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GÃªnero"
            android:textSize="12sp"
            android:textColor="@color/corDestaque"
            android:background="@drawable/genre_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

</LinearLayout>